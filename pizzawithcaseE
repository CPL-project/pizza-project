                    exit(1);
                }
			}
            else if(t4=='d'||t4=='D')
			{
				if(pSize == 'r' || pSize == 'R')
				{
					pSizeOutput = "Regular";
					t4price=15;
				}
				else if (pSize=='L' || pSize=='l')
                {
                    pSizeOutput = "Large";
                    t4price=20;
                }
                else if (pSize=='P' || pSize=='p')
